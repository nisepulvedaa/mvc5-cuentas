    <link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login" style="background-color: #ebebeb !important ;">
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a>
            <img height="40" src="~/Metronic/assets/admin/layout/img/logo_saam.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content" style="background-color: #ffffff">
        <!-- BEGIN LOGIN FORM -->
        <form id="loginForm" class="login-form" method="post" action="../Dashboard/">
            <h3 class="form-title" style="color:#4b77be;">Sign In</h3>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <input id="user" class="form-control form-control-solid placeholder-no-fix" type="text"  placeholder="Username" name="username" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input id="pass" class="form-control form-control-solid placeholder-no-fix" type="password"  placeholder="Password" name="password" />
            </div>
         
            <div class="form-group">
                <button type="button" class="btn btn-success uppercase" onclick="doLogin()" style="background-color: #4b77be !important" >Login</button>
            </div>

            <div class="form-group">
                
                <a href="../Perfil/Recuperar">Recuperar Contraseña</a>
            </div>

        </form>

    </div>
    <div class="copyright">
