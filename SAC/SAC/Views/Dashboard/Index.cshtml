
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Cuentas Asignadas
                        </div>
                    </div>
                    <div class="portlet-body">

                        <div class="table-scrollable" style="padding:10px;">
                            <table id="cuentasActivasAsignadasTable" class="table table-striped table-bordered table-hover" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Empresa</th>
                                        <th>Cuenta</th>
                                        <th>Fecha</th>
                                        <th>Dias Plazo</th>
                                        <th>Estado</th>
                                        <th>Analista</th>
                                        <th>Validador</th>
                                        <th>Certificador</th>
                                        <th>Avance</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />



}


@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    



    <script>

        var tabla = $('#cuentasActivasAsignadasTable').dataTable(datatables_options);

        tabla.fnSort([[2, 'desc']]);

    </script>
}