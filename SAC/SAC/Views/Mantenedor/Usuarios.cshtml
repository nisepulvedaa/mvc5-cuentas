
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i>Mantenedor de Usuarios
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalUsuarios" data-toggle="modal" class="btn btn-info" onclick="nuevoUsuario();">
                                Ingresar Usuario
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Usuarios
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Rut</th>
                                        <th>Nombre</th>
                                        <th>Empresa</th>
                                        <th>Email</th>
                                        <th>Perfil</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                   @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div aria-hidden="true" role="dialog" tabindex="-1" id="modalUsuarios" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Usuario</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="usuariosForm">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Rut </label>
                                <div class="col-md-9">
                                    <input type="text" id="usuarioRut" name="usuarioRut" placeholder="Rut del Usuario..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Nombre </label>
                                <div class="col-md-9">
                                    <input type="text" id="usuarioNombre" name="usuarioNombre" placeholder="Nombre de Usuario..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Empresa</label>
                                <div class="col-md-9">
                                    <select class="form-control select2me" id="empresaUsuario" name="empresaUsuario" data-placeholder="Seleccione una Empresa...">
                                        <option value=""></option>
                                        @Html.Raw(ViewBag.EmpresaSelect)
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Email </label>
                                <div class="col-md-9">
                                    <input type="text" id="usuarioEmail" name="usuarioEmail" placeholder="Email del Usuario..." class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Perfil</label>
                                <div class="col-md-9">
                                    <select class="form-control select2me" id="perfilUsuario" name="perfilUsuario" data-placeholder="Seleccione un Perfil...">
                                        <option value=""></option>
                                        @Html.Raw(ViewBag.PerfilSelect)
                                        <option value="1"></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="usuarioId" />
                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarUsuarios()">Ingresar Usuarios</button>
            </div>
        </div>
    </div>

</div>


@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/SAC.css" rel="stylesheet" />

}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="~/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Metronic/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/Content/js/mantenedor.js"></script>

    <script>

        $('#example').dataTable(datatables_options);

    </script>



}

