

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<h2>Index</h2>
    <h1></h1>*@

<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-database "></i>Mantenedor de Empresas
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <a href="#modalEmpresas" data-toggle="modal" class="btn btn-info" onclick="nuevaEmpresa()">
                                Ingresar Empresa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-building "></i>Lista de Empresas
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable" style="padding:10px;">
                            <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Rut</th>
                                        <th>Razon Social</th>
                                        <th>Giro</th>
                                        <th>Logo</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.Raw(ViewBag.Table)
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>


            </div>

        </div>

    </div>


</div>

<div class="row">
    
    <div class="col-sm-12">

        <div style="width:800px; height:500px; border: 1px solid #808080 ; ">

        </div>

    </div>

</div>


<div aria-hidden="true" role="dialog" tabindex="-1" id="modalEmpresas" class="modal fade bs-modal-lg" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                <h4 id="modal-title" class="modal-title">Ingresar Empresa</h4>
            </div>
            <div class="modal-body sacModal">
                <form id="empresasForm">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">RUt Empresa</label>
                                <div class="col-md-9">
                                    <input type="text" id="rutEmpresa" name="rutEmpresa" placeholder="Rut Empresa..." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Razon Social Empresa</label>
                                <div class="col-md-9">
                                    <input type="text" id="razonSocialEmpresa" name="razonSocialEmpresa" placeholder="Razon Social Empresa.." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Giro Empresa</label>
                                <div class="col-md-9">
                                    <input type="text" id="giroEmpresa" name="giroEmpresa" placeholder="Giro de la Empresa.." class="form-control">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label">Logo Empresa</label>
                                <div class="col-md-9">
                                    <input type="file" id="EmpresaLogoFile">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-9">
                                    <img id="previewimg" src="#" alt="Preview" style="height: 100px; width: auto;" />
                                </div>
                            </div>
                            <input type="hidden" id="empresaId" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn default" type="button">Cerrar</button>
                <button id="button-modal" class="btn blue" type="button" onclick="ingresarEmpresas()">Ingresar Empresa</button>
            </div>
        </div>
    </div>

</div>


@section styles{
    <link href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/SAC.css" rel="stylesheet" />

}

@section scripts {
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="~/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Metronic/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/b64image/b64image.js"></script>
    <script src="~/Content/plugins/imagePopup/imagePopup.js"></script>
    <script src="~/Content/js/mantenedor.js"></script>

    <script>

        $('#example').dataTable(datatables_options);
        $('#EmpresaLogoFile').b64image({
            showPreview: true,
            preview: '#previewimg'
        });

        $('.logoimg').each(function () {
            $(this).imagePopup({
                height: '50px',
                width: 'auto'
            });
        });







    </script>



}

